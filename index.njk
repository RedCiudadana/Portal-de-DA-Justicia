{% block content %}
<!-- Intro Banner
================================================== -->
<!-- add class "disable-gradient" to enable consistent background overlay -->
<div class="intro-banner" data-background-image="images/home-background.jpg">
	<div class="container">
		
		<!-- Intro Headline -->
		<div class="row">
			<div class="col-md-12">
				<div class="banner-headline">
					<h1>
						<strong>Portal de Datos Abiertos - Sector Justicia</strong>
						<br>
					</h1>
					
						<span>Compartimos los datos que producen las instituciones del <strong class="color">Sector Justicia </strong>para que puedas desarrollar aplicaciones, contar historias y poner en valor los datos de Guatemala.</span>
					
				</div>
			</div>
		</div><br>
		
		<!-- Search Bar -->
		<div class="row">
			<div class="col-md-12">
				<div class="intro-banner-search-form">

					<!-- Search Field -->
					<div class="intro-search-field with-autocomplete">

						<div class="input-with-icon">
							<input id="autocomplete-input" type="text" placeholder="¿Qué datos buscás?">
							<i class="icon-material-outline-location-on"></i>
						</div>
					</div>

					<!-- Button -->
					<div class="intro-search-button">
						<button class="button ripple-effect" onclick="window.location.href='jobs-list-layout-full-page-map.html'">Buscar</button>
					</div>
				</div>
			</div>
		</div>

		<!-- Stats -->
		<div class="row">
			<div class="col-md-12">
				<ul class="intro-stats margin-top-45 hide-under-992px">
					<li>
						
						<strong class="counter" id="counterData">534</strong>
						<span>Datasets</span>
					</li>
					<li>
						<strong class="counter" id="counterIns">11</strong>
						<span>Instituciones</span>
					</li>
					<li>
						<strong class="counter">1,232</strong>
						<span>Historias</span>
					</li>
				</ul>
			</div>
		</div>

	</div>
</div>


<!-- Content
================================================== -->
<!-- Category Boxes -->
<div class="section margin-top-65">
	<div class="container">
		<div class="row">
			<div class="col-xl-12">

				<div class="section-headline centered margin-bottom-15">
					<h3>Categorias</h3>
				</div>

				<!-- Category Boxes Container -->
				<div class="categories-container">

					{% for item in collections.categoria %}
						<!-- Category Box -->
						<a href="{{item.url}}" class="category-box">
							<div class="category-box-icon">
								<i class="icon-line-awesome-file-code-o"></i>
							</div>
							<div class="category-box-counter">612</div>
							<div class="category-box-content">
								<h3>{{item.data.categoria.nombre}}</h3>
								<!--p>Software Engineer, Web / Mobile Developer & More</p-->
							</div>
						</a>
					{% endfor %}

				</div>

			</div>
		</div>
	</div>
</div>
<!-- Category Boxes / End -->


